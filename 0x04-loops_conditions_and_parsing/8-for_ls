#!/usr/bin/env bash
# This script lists files in current directory (excluding hidden)
# and prints only the part of the filename after the first dash (-)

for file in *; do
  # Check if it is a file or directory (excluding hidden)
  # Extract part after first dash
  if [[ "$file" == *-* ]]; then
    echo "${file#*-}"
  else
    echo "$file"
  fi
done
